<% layout('layouts/boilerplate') %>


<div class="container-fluid">
    <div>
        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
                <div class="profile d-flex">
                    <img src="<%=  contribution.user.avatar.path %>"  width="30" height="30" class="rounded-circle" alt="profile pic">
                    <p class="mt-1 ms-3"><%= contribution.user.firstName %> <%= contribution.user.lastName %>  </p>
                </div>
                    <div class="d-flex-col mb-3">
                    <h1 class="display-3"><%= contribution.title %> </h1>
                    <p class="mb-0"><%= contribution.createdAt %> </p>
                </div>
                <div class="d-flex mb-4">
                    <p class="text-primary fw-bold me-2"><%=  %></p>
                    <p class="text-primary fw-bold"><%= contribution.category?.title || "All" %></p>
                </div>

                <h3><%= contribution.content %></h3>
                <div>
                    <% if(contribution.files.length > 0){ %>
                        <h6>Additonal files</h6>
                        <% contribution.files.forEach(file => { %>
                            <a href="/file/<%= file._id  %>"><%= file.originalname %></a>
                        <% }) %>  
                    <% } %> 
                </div>
            </div>
            
        </div>
    </div>
</div>